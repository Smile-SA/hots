{
  "data_folder": "./tests/data/thesis_ex_10",
  "tick_field": "timestamp",
  "host_field": "machine_id",
  "individual_field": "container_id",
  "metrics": ["cpu_usage"],
  "reader": {
    "type": "csv",
    "parameters": {
      "data_folder": "./tests/data/thesis_ex_10",
      "file_name": "container_usage.csv",
      "tick_field": "timestamp",
      "individual_field": "container_id",
      "host_field": "machine_id",
      "metrics": ["cpu_usage"],
      "tick_increment": 60
    }
  },
  "clustering": {
    "method": "stream_kmeans",
    "nb_clusters": 3,
    "parameters": {
      "nb_clusters": 3
    }
  },
  "optimization": {
    "solver": "pyomo",
    "parameters": {
      "pb_number": 1,
      "solver": "glpk"
    }
  },
  "problem": {
    "type": "placement",
    "parameters": {
      "tol": 0.1,
      "tol_move": 0.2
    }
  },
  "connector": {
    "type": "kafka",
    "parameters": {
      "connector_url": "http://localhost:8080",
      "bootstrap.servers": "localhost:9092",
      "topics": ["hots_moves"]
    }
  },
  "logging": {
    "level": "INFO",
    "filename": "./out/hots.log",
    "fmt": "%(asctime)s %(levelname)s: %(message)s"
  },
  "reporting": {
    "results_folder": "./out",
    "metrics_file": "./out/metrics.csv",
    "plots_folder": "./out/plots"
  }
}
