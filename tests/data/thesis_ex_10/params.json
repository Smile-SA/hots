{
  "csv": 0,
  "host_meta_path": "tests/data/thesis_ex_10/node_meta.csv",
  "analysis": {
    "window_duration": "3",
    "sep_time": "3"
  },
  "clustering": {
    "algo": "kmeans",
    "nb_clusters": 3
  },
  "data": {
    "individuals_file": "container_usage.csv",
    "hosts_meta_file": "node_meta.csv",
    "individual_field": "container_id",
    "host_field": "machine_id",
    "tick_field": "timestamp",
    "metrics": ["cpu"]
  },
  "heuristic": {
    "algo": "distant_pairwise"
  },
  "optimization": {
    "model": "src/hots/model_small_pyomo.py",
    "solver": "glpk"
  },
  "loop": {
    "mode": "default",
    "tick": 2,
    "constraints_dual": ["mustLink"],
    "tol_dual_clust": 0.5,
    "tol_move_clust": 1,
    "tol_open_clust": 0.0,
    "tol_dual_place": 0.5,
    "tol_move_place": 1,
    "tol_step": 0.0
  },
  "plot": {
    "renderer": "chromium"
  },
  "allocation":{
    "enable": false,
    "constraints":{
      "load_threshold": 0.5,
      "max_amplitude": 0.5
    },
    "objective":{
      "open_nodes": 1,
      "target_load_CPU": 0.8 
    }
  },
  "placement":{
    "enable": true
  },
  "kafkaConf":{
    "topics":{
      "docker_topic": "DockerPlacer",
      "mock_topic": "MockPlacement"
    },
    "Producer":{
      "brokers":["10.3.73.162:9092"]
    },
    "Consumer":{
      "group": "DockerPlacerConsumer",
      "brokers":["10.3.73.162:9092"]

    },
    "schema":{
      "type": "record",
      "name": "ContainerData",
      "namespace": "com.smile.hots",
      "fields": [
        {
          "name": "containers",
          "type": {
            "type": "array",
            "items": {
              "type": "record",
              "name": "Container",
              "fields": [
                {"name": "timestamp", "type": "int"},
                {"name": "container_id", "type": "string"},
                {"name": "machine_id", "type": "string"},
                {"name": "cpu", "type": "float"}
              ]
            }
          }
        }
      ]
    },
    "schema_url": "http://localhost:8081"
  }
    
}
